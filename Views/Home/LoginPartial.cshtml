@model Login

<div class="card">
    <h1 class="card-header bg-info">Login</h1>
    <div class="card-body">
        <form action="/login" method="post">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Email:</label>
                    <input asp-for="LoginEmail" class="form-control">
                    <span asp-validation-for="LoginEmail" class="text-info"></span>
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input asp-for="LoginPassword" class="form-control">
                    <span asp-validation-for="LoginPassword" class="text-info"></span>
                </div>
            </div>
        </div>
        <input type="submit" class="btn btn-info" value="Login" />
    </form>
</div>
</div>
